---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import Container from "../components/Container.astro";
import Ficha from "../components/Ficha.astro";

import {data} from "../data/Aplications.ts";

---

<Layout title="Home" aplication={false}>
    <Main />
    <Container>
        {
            data.map((item)=>(
                <Ficha 
                id={item.id} 
                title={item.title} 
                descripcion={item.info.substring(0, 108) + "..."} 
                image={item.image} 
                />
            ))
        }
    </Container>
</Layout>

