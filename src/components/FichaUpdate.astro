---
interface Props{
    Imagen: string;
    title: string;
    date: string;
    description: string;
    version: string;
    url: string;
}
const {Imagen, title, date, description, version, url} = Astro.props;
---
<div class="Ficha-Update" >
    <picture>
        <img src={Imagen} alt="">
    </picture>
    <div class="Ficha-Update-descripcion">
        <p>{date}</p>
        <h2>{title}</h2>
        <h3>version: {version}</h3>
        <h4>{description}</h4>
        <a href={url}>Leer mas...</a>
    </div>
</div>

<style>
    .Ficha-Update{
        display: flex;
        margin: 20px 0;
        backdrop-filter: blur(5px);
        border: 2px solid #188C77;
        border-radius: 5px;
        cursor: pointer;
        transition: all .3s ease-in-out;
        animation: EntradaUpdatesFicha .5s ease-in-out;
    }
    .Ficha-Update:hover{
        border: 2px solid #fff;
    }
    .Ficha-Update:hover .Ficha-Update-descripcion{
        color: var(--Text_Color);
    }
    picture{
        display: flex;
        width: 230px;
        height: 200px;
        align-items: center;
        justify-content: center;
        border-radius: 5px;
        overflow: hidden;
    }
    img{
        height: 200px;
    }
    .Ficha-Update-descripcion{
        display: flex;
        padding: 0 15px;
        width: 100%;
        justify-content: center;
        flex-direction: column;
        color: #d2d2d2;
        text-shadow: 0 0 3px #000;
        transition: all .3s ease-in-out;
    }
    a{
        color: var(--Main_Color);
        text-decoration: none;
        font-weight: bold;
    }

    @keyframes EntradaUpdatesFicha {
        0%{
            opacity: 0;
            transform: translateX(50px);
        }
        100%{
            opacity: 1;
            transform: translateX(0);
        }
    }
 
</style>