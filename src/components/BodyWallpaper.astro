---
    const wallpapers = [
        "https://res.cloudinary.com/daqrkk4sr/video/upload/v1700077708/kf0afnueogzmfwykhxkl.mp4",
        "https://res.cloudinary.com/daqrkk4sr/video/upload/v1700093809/yunx8ic7tnqjb5hssyci.mp4",
        "https://res.cloudinary.com/daqrkk4sr/video/upload/v1700180593/zq985xqrnf2uj929ee18.mp4",
        "https://res.cloudinary.com/daqrkk4sr/video/upload/v1700181257/kjkomyxlinwy5x8i6gqy.mp4",
        "https://res.cloudinary.com/daqrkk4sr/video/upload/v1700181312/hhbp4po9iifrcn2mchmj.mp4",
        "https://res.cloudinary.com/daqrkk4sr/video/upload/v1700181395/czfxsg0vuusv43awlv2e.mp4"
    ]
    const variables = Math.floor(Math.random() * wallpapers.length);
---
<div class="Video-Main" >
    <video autoplay muted loop transition:persist >
        <source src={wallpapers[variables]} type="video/mp4" >
    </video>
    <slot />
</div>

<style>
    .Video-Main {
        width: 100%;
        height: calc( 90vh + 5px);
        overflow: hidden;
    }
    video {
        position: fixed;
        top: 0;
        right: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        object-fit: cover;
    }
</style>